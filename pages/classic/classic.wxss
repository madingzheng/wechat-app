.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.episode {
  margin-left: 20rpx;
  margin-top: 4rpx;
}

.like {
  margin-top: 6rpx;
}

.move {
  width: 100%;
}

.nav {
  position: absolute;
  bottom: 40rpx;
}

.like-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-right: 10rpx;
}

.share {
  width: 40rpx;
  height: 40rpx;
  margin-top: 30rpx;
}